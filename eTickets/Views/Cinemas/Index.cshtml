@*DEFINE MODEL*@
@model List<Cinema>
@*DEFINE VIEW DATA*@
@{
	ViewData["Title"] = "List of Cinemas";
}

@*HTML & CODE*@
<div class="row">
	<div class="col-md-8 offset-2">
		<table class="table">
			<thead>
				<tr class="text-center">
					<th>Logo</th>
					<th>Name</th>
					<th>Description</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td class="align-middle">
							<img src="@item.Logo" alt="@item.Name" class="rounded-circle" style="max-width: 150px;" />
						</td>
						<td class="align-middle">
							@Html.DisplayFor(x => item.Name)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(x => item.Description)
						</td>
						<td class="align-middle">
							<a href="#" class="btn btn-outline-primary rounded-0 btn-sm"><i class="bi bi-pencil-square"></i> Edit</a>
							<a href="#" class="btn btn-outline-info rounded-0 btn-sm"><i class="bi bi-eye"></i> Details</a>
							<a href="#" class="btn btn-outline-danger rounded-0 btn-sm"><i class="bi bi-trash"></i> Delete</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

